<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ResearchProjectDef>
    <defName>HeavyCannons</defName>
    <label>High Caliber Cannons</label>
    <description>Allows you to get started in the DMC Tech tree</description>
    <baseCost>1000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>HeavyTurrets</li>
      <li>PrecisionRifling</li>
    </prerequisites>
    <researchViewX>0</researchViewX>
    <researchViewY>2</researchViewY>
    <tab>DMC_General</tab>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>HeavyAutocannons</defName>
    <label>Autocannons</label>
    <description>Allows you to build fast-firing high caliber cannons.</description>
    <baseCost>2500</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>HeavyCannons</li>
    </prerequisites>
    <researchViewX>2</researchViewX>
    <researchViewY>1</researchViewY>
    <tab>DMC_General</tab>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>Howitzers</defName>
    <label>Howitzer Cannons</label>
    <description>Allows you to build large howitzer cannons that can shoot over walls.</description>
    <baseCost>1200</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>HeavyCannons</li>
      <li>Mortars</li>
    </prerequisites>
    <researchViewX>2</researchViewX>
    <researchViewY>3</researchViewY>
    <tab>DMC_General</tab>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>NavalGuns</defName>
    <label>Naval Guns</label>
    <description>Allows you to build armored large naval guns.</description>
    <baseCost>3000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>HeavyAutocannons</li>
      <li>Fabrication</li>
    </prerequisites>
    <researchViewX>4</researchViewX>
    <researchViewY>1</researchViewY>
    <tab>DMC_General</tab>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>HeavyNavalGuns</defName>
    <label>Heavy Naval Guns</label>
    <description>Allows you to build even larger naval guns that are able to shoot over walls.</description>
    <baseCost>4000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>NavalGuns</li>
      <li>Howitzers</li>
    </prerequisites>
    <researchViewX>5</researchViewX>
    <researchViewY>3</researchViewY>
    <tab>DMC_General</tab>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>Automated_FCS</defName>
    <label>automated fire control system</label>
    <description>Allows you to make Automated FCS computers, a necessary material to build an unmanned cannon turrets.</description>
    <baseCost>1000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>AdvancedFabrication</li>
    </prerequisites>
    <researchViewX>0</researchViewX>
    <researchViewY>4</researchViewY>
    <tab>DMC_General</tab>
  </ResearchProjectDef>
</Defs>