<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="DMC_BaseMannedTurret">
	    <defName>Turret_Mark45_Navalgun</defName>
	    <label>5"/54 (12.7 cm) Mark 45</label>
	    <description>A manned 127mm Mark 45 Naval gun, more accurate than the Mark 16. Uses the 127mm Mk.64 Shell. Has an internal ammunition storage capacity of 50 rounds. Capable of firing 20 Rounds per minute. Consumes 1200W of power for its electric-powered aiming controls and autoloading systems. 15m min range, 200m max range. Explodes with radius of 2 blocks when destroyed. Because of the size, this turret cant be placed under a roof. Cannot shoot over walls.</description>
	    <graphicData>
	        <texPath>Things/Building/MannedMK45</texPath>
	        <graphicClass>Graphic_Single</graphicClass>
	        <drawSize>(16,16)</drawSize>
	        <damageData>
	        	<rect>(0.38,0.2,0.56375,0.8)</rect>
	        	<cornerTL>Damage/Corner</cornerTL>
	        </damageData>
	        <shadowData>
	        	<offset>(0,0,0)</offset>
	        	<volume>(2,1.5,2)</volume>
	        </shadowData>
	    </graphicData>
	    <uiIconPath>Things/Icons/MannedMK45_MenuIcon</uiIconPath>
	    <building>
	        <turretGunDef>TurretGun_Mark45_Navalgun</turretGunDef>
	        <turretTopGraphicPath>Things/Building/MannedMK45_Top</turretTopGraphicPath>
	        <turretTopDrawSize>16</turretTopDrawSize>
	        <turretBurstWarmupTime>0</turretBurstWarmupTime>
	        <turretBurstCooldownTime>3</turretBurstCooldownTime> <!-- Reload Time -->
	    </building>
	    <interactionCellOffset>(0,0,-2)</interactionCellOffset>
	    <size>(5,5)</size> 
	    <specialDisplayRadius>150</specialDisplayRadius>
		<costStuffCount>100</costStuffCount>
	    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
	    <costList>
			<Steel>1000</Steel>
			  <Plasteel>110</Plasteel>  
			  <ComponentIndustrial>20</ComponentIndustrial>  
			  <ComponentSpacer>3</ComponentSpacer>  
		</costList>
	    <statBases>
		    <MaxHitPoints>8000</MaxHitPoints>
		    <WorkToBuild>16000</WorkToBuild>
		    <Mass>200</Mass>
	    </statBases>
	    <researchPrerequisites>
	        <li>127mmMk45</li>
	    </researchPrerequisites>
	    <comps>
	    	 
	      <li Class="CompProperties_Explosive">
	        <explosiveRadius>2</explosiveRadius>
	        <explosiveDamageType>Bomb</explosiveDamageType>
	      </li>
	      	 

	      	 
	      <li Class="CompProperties_Power">
	        <compClass>CompPowerTrader</compClass>
	        <basePowerConsumption>1200</basePowerConsumption>
	      </li>
	      	 

	       
	      <li Class="CompProperties_Refuelable">
	        <fuelLabel>Ammunitions</fuelLabel>
	        <fuelGizmoLabel>Ammo</fuelGizmoLabel>
	        <fuelFilter>
	          <thingDefs>
	            <li>Bullet_MK64127mm_AP</li>
	          </thingDefs>
	        </fuelFilter>
	        <fuelCapacity>50</fuelCapacity>
	        <initialFuelPercent>0</initialFuelPercent>
	        <autoRefuelPercent>0.25</autoRefuelPercent>
	        <showFuelGizmo>true</showFuelGizmo>
	        <minimumFueledThreshold>0</minimumFueledThreshold>
	        <atomicFueling>false</atomicFueling>
	        <fuelMultiplier>1</fuelMultiplier>
	        <factorByDifficulty>false</factorByDifficulty>
	        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
	        <outOfFuelMessage>Cannot shoot: Out of ammo</outOfFuelMessage>
	        <fuelIconPath>UI/Overlays/Ammo</fuelIconPath>
	      </li>
	  	 
	    </comps>
	    <!--noAmmoRack
	    <inspectorTabs>
	        <li>ITab_Shells</li>
	    </inspectorTabs>
	    noAmmoRack-->
	     
	    <placeWorkers>
	      <li>PlaceWorker_NotUnderRoof</li>
	    </placeWorkers>
	     
	</ThingDef>
  	

