<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="DMC_BaseMannedTurret">
	    <defName>Turret_RARDEN_Autocannon</defName>
	    <label>L21A1 RARDEN</label>
	    <description>Uses 30mm HS831A shell. 3m Min range, 70m Max range. Fires a burst of 6 shots at about 92 RPM and cools down for 1.5 second between each bursts. Has internal ammo capacity of 100 3x ammo clips. Explodes with radius of 1 block when destroyed.</description>
	    <graphicData>
	        <texPath>Things/Building/MannedRarden</texPath>
	        <graphicClass>Graphic_Single</graphicClass>
	        <drawSize>(11,11)</drawSize>
	        <damageData>
	        	<rect>(0.38,0.2,0.56375,0.8)</rect>
	        	<cornerTL>Damage/Corner</cornerTL>
	        </damageData>
	        <shadowData>
	        	<offset>(0,0,0)</offset>
	        	<volume>(2,1.5,2)</volume>
	        </shadowData>
	    </graphicData>
	    <uiIconPath>Things/Icons/MannedRarden_MenuIcon</uiIconPath>
	    <building>
	        <turretGunDef>TurretGun_RARDEN_Autocannon</turretGunDef>
	        <turretTopGraphicPath>Things/Building/MannedRarden_Top</turretTopGraphicPath>
	        <turretTopDrawSize>11</turretTopDrawSize>
	        <turretBurstWarmupTime>0</turretBurstWarmupTime>
	        <turretBurstCooldownTime>1.5</turretBurstCooldownTime> <!-- Reload Time -->
	    </building>
	    <interactionCellOffset>(0,0,-2)</interactionCellOffset>
	    <size>(3,3)</size> 
	    <specialDisplayRadius>70</specialDisplayRadius>
		<costStuffCount>30</costStuffCount>
	    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
	    <costList>
			<Steel>300</Steel>
			  <Plasteel>2</Plasteel>  
			  <ComponentIndustrial>4</ComponentIndustrial>  
			<!--AdvCompo <ComponentSpacer></ComponentSpacer> AdvCompo-->
		</costList>
	    <statBases>
		    <MaxHitPoints>2400</MaxHitPoints>
		    <WorkToBuild>4000</WorkToBuild>
		    <Mass>200</Mass>
	    </statBases>
	    <researchPrerequisites>
	        <li>RARDEN</li>
	    </researchPrerequisites>
	    <comps>
	    	 
	      <li Class="CompProperties_Explosive">
	        <explosiveRadius>1</explosiveRadius>
	        <explosiveDamageType>Bomb</explosiveDamageType>
	      </li>
	      	 

	      	<!--usesPower
	      <li Class="CompProperties_Power">
	        <compClass>CompPowerTrader</compClass>
	        <basePowerConsumption>1</basePowerConsumption>
	      </li>
	      	usesPower-->

	       
	      <li Class="CompProperties_Refuelable">
	        <fuelLabel>Ammo Clips</fuelLabel>
	        <fuelGizmoLabel>Ammo</fuelGizmoLabel>
	        <fuelFilter>
	          <thingDefs>
	            <li>Bullet_30mm_AP</li>
	          </thingDefs>
	        </fuelFilter>
	        <fuelCapacity>100</fuelCapacity>
	        <initialFuelPercent>0</initialFuelPercent>
	        <autoRefuelPercent>0.25</autoRefuelPercent>
	        <showFuelGizmo>true</showFuelGizmo>
	        <minimumFueledThreshold>0</minimumFueledThreshold>
	        <atomicFueling>false</atomicFueling>
	        <fuelMultiplier>1</fuelMultiplier>
	        <factorByDifficulty>false</factorByDifficulty>
	        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
	        <outOfFuelMessage>Cannot shoot: Out of ammo</outOfFuelMessage>
	        <fuelIconPath>UI/Overlays/Ammo</fuelIconPath>
	      </li>
	  	 
	    </comps>
	    <!--noAmmoRack
	    <inspectorTabs>
