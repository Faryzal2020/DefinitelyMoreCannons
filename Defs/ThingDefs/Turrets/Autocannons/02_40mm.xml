<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="DMC_BaseMannedTurret">
	    <defName>40mmAutocannon</defName>
	    <label>40mm Flak 28 Bofors</label>
	    <description>A 40mm automatic cannon turret. Uses 4x40mm Ammunition Clips with ammunition storage of 20 clips, 70m max range. Explodes with radius of 1 block when destroyed.</description>
	    <graphicData>
	        <texPath>Things/Building/MannedFlak28</texPath>
	        <graphicClass>Graphic_Single</graphicClass>
	        <drawSize>(6,6)</drawSize>
	        <damageData>
		        <rect>(0.2,0.2,0.6,0.6)</rect>
		    </damageData>
		    <shadowData>
		        <volume>(1.5,0.35,1.4)</volume>
		        <offset>(0,0,-0.05)</offset>
	        </shadowData>
	    </graphicData>
	    <uiIconPath>Things/Icons/MannedFlak28_MenuIcon</uiIconPath>
	    <building>
	        <turretGunDef>Gun_40mmAutocannonTurret</turretGunDef>
	        <turretTopGraphicPath>Things/Building/MannedFlak28_Top</turretTopGraphicPath>
	        <turretTopDrawSize>6</turretTopDrawSize>
	        <turretBurstWarmupTime>0</turretBurstWarmupTime>
	        <turretBurstCooldownTime>0.8</turretBurstCooldownTime> <!-- Reload Time -->
	    </building>
	    <interactionCellOffset>(0,0,-2)</interactionCellOffset>
	    <size>(3,4)</size> 
	    <specialDisplayRadius>60</specialDisplayRadius>
		<costStuffCount>20</costStuffCount>
	    <constructionSkillPrerequisite>3</constructionSkillPrerequisite>
	    <costList>
			<Steel>200</Steel>
			<!--Plasteel <Plasteel></Plasteel> Plasteel-->
			  <ComponentIndustrial>2</ComponentIndustrial>  
			<!--AdvCompo <ComponentSpacer></ComponentSpacer> AdvCompo-->
		</costList>
	    <statBases>
		    <MaxHitPoints>600</MaxHitPoints>
		    <WorkToBuild>3000</WorkToBuild>
		    <Mass>200</Mass>
	    </statBases>
	    <researchPrerequisites>
	        <li>SingleBofors</li>
	    </researchPrerequisites>
	    <comps>
	    	 
	      <li Class="CompProperties_Explosive">
	        <explosiveRadius>1</explosiveRadius>
	        <explosiveDamageType>Bomb</explosiveDamageType>
	      </li>
	      	 

	      	<!--usesPower
	      <li Class="CompProperties_Power">
	        <compClass>CompPowerTrader</compClass>
	        <basePowerConsumption>1</basePowerConsumption>
	      </li>
	      	usesPower-->

	       
	      <li Class="CompProperties_Refuelable">
	        <fuelLabel>Ammo Clip</fuelLabel>
	        <fuelGizmoLabel>Ammo</fuelGizmoLabel>
	        <fuelFilter>
	          <thingDefs>
	            <li>BoforsClip</li>
	          </thingDefs>
	        </fuelFilter>
	        <fuelCapacity>20</fuelCapacity>
	        <initialFuelPercent>0</initialFuelPercent>
	        <autoRefuelPercent>0.25</autoRefuelPercent>
	        <showFuelGizmo>true</showFuelGizmo>
	        <minimumFueledThreshold>0</minimumFueledThreshold>
	        <atomicFueling>false</atomicFueling>
	        <fuelMultiplier>1</fuelMultiplier>
	        <factorByDifficulty>false</factorByDifficulty>
	        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
	        <outOfFuelMessage>Cannot shoot: Out of ammo</outOfFuelMessage>
	        <fuelIconPath>UI/Overlays/Ammo</fuelIconPath>
	      </li>
	  	 
	    </comps>
	    <!--noAmmoRack
	    <inspectorTabs>
	        <li>ITab_Shells</li>
	    </inspectorTabs>
	    noAmmoRack-->
	    <!--notUnderRoof
	    <placeWorkers>
	      <li>PlaceWorker_NotUnderRoof</li>
	    </placeWorkers>
	    notUnderRoof-->
	</ThingDef>
  	

