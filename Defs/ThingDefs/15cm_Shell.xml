<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--=============== Base Shells ===============-->

  <ThingDef Name="15cmSIGShellBase" ParentName="ResourceBase" Abstract="True">
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>10</stackLimit>
    <techLevel>Industrial</techLevel>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <MarketValue>120</MarketValue>
      <Mass>20</Mass>
      <Flammability>1.5</Flammability>
      <DeteriorationRate>0.2</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>15cmSIGShells</li>
    </thingCategories>
    <tradeTags>
      <li>15cmSIGShell</li>
    </tradeTags>
  </ThingDef>

  <ThingDef Name="Makeable15cmSIGShellBase" ParentName="15cmSIGShellBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>1500</workAmount>
      <targetCountAdjustment>5</targetCountAdjustment>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

  <!--=============== 15cm HE Shell ===============-->

  <ThingDef ParentName="Makeable15cmSIGShellBase">
    <defName>15cmSIGShell_HighExplosive</defName>
    <label>15cm HE sIG-33 shell</label>
    <description>A 15cm high explosive howitzer shell.</description>
    <graphicData>
      <texPath>Things/Projectile/150HE</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.6</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>
          <min>30</min>
          <max>60</max>
        </wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>15cmSIGBullet_Shell_HighExplosive</projectileWhenLoaded>
    <costList>
      <Steel>55</Steel>
      <Chemfuel>20</Chemfuel>
    </costList>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>15cmSIGBullet_Shell_HighExplosive</defName>
    <label>15cm shell</label>
    <graphicData>
      <texPath>Things/Projectile/ShellHighExplosive</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>150mmHEBullet</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>80</speed>
      <explosionRadius>4</explosionRadius>
      <flyOverhead>True</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>
</Defs>