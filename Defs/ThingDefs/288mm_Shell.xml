<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--=============== Base Shells ===============-->

  <ThingDef Name="288mmShellBase" ParentName="ResourceBase" Abstract="True">
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>8</stackLimit>
    <techLevel>Industrial</techLevel>
    <statBases>
      <MaxHitPoints>110</MaxHitPoints>
      <MarketValue>170</MarketValue>
      <Mass>30</Mass>
      <Flammability>1.5</Flammability>
      <DeteriorationRate>0.2</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>288mmShells</li>
    </thingCategories>
    <tradeTags>
      <li>288mmShell</li>
    </tradeTags>
  </ThingDef>

  <ThingDef Name="Makeable288mmShellBase" ParentName="288mmShellBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>2400</workAmount>
      <targetCountAdjustment>5</targetCountAdjustment>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

  <!--=============== 288mm HE Shell ===============-->

  <ThingDef ParentName="Makeable288mmShellBase">
    <defName>288mm_HighExplosive</defName>
    <label>9.2 Inch HE Howitzer shell</label>
    <description>A 9.2 Inch high explosive howitzer shell.</description>
    <graphicData>
      <texPath>Things/Projectile/288HE</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>5</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.6</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>
          <min>30</min>
          <max>60</max>
        </wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>600HowitzerBullet_Shell_HighExplosive</projectileWhenLoaded>
    <costList>
      <Steel>80</Steel>
      <Chemfuel>40</Chemfuel>
    </costList>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>288mmBullet_Shell_HighExplosive</defName>
    <label>9.2 Inch shell</label>
    <graphicData>
      <texPath>Things/Projectile/ShellHighExplosive</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>288mmHEBullet</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>80</speed>
      <explosionRadius>7</explosionRadius>
      <flyOverhead>True</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>
</Defs>