<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--=============== Base Shells ===============-->

	<ThingDef Name="HECannonShellBase" ParentName="ResourceBase" Abstract="True">
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>30</stackLimit>
    <techLevel>Industrial</techLevel>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <MarketValue>70</MarketValue>
      <Mass>4</Mass>
      <Flammability>1.5</Flammability>
      <DeteriorationRate>0.2</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>88mmCannonShells</li>
    </thingCategories>
    <tradeTags>
      <li>88mmCannonShell</li>
    </tradeTags>
  </ThingDef>

  <ThingDef Name="MakeableHECannonShellBase" ParentName="HECannonShellBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>1500</workAmount>
      <targetCountAdjustment>5</targetCountAdjustment>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

