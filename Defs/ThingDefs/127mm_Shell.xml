<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--=============== Base Shells ===============-->

	<ThingDef Name="127mmHECannonShellBase" ParentName="ResourceBase" Abstract="True">
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>30</stackLimit>
    <techLevel>Industrial</techLevel>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>100</MarketValue>
      <Mass>19</Mass>
      <Flammability>1.5</Flammability>
      <DeteriorationRate>0.2</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>127mmCannonShells</li>
    </thingCategories>
    <tradeTags>
      <li>127mmCannonShell</li>
    </tradeTags>
  </ThingDef>

  <ThingDef Name="Makeable127mmHECannonShellBase" ParentName="127mmHECannonShellBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>2500</workAmount>
      <targetCountAdjustment>5</targetCountAdjustment>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

  <!--=============== 127 HE Shell ===============-->

  <ThingDef ParentName="Makeable127mmHECannonShellBase">
    <defName>127CannonShell_HighExplosive</defName>
    <label>127mm HE Cannon shell</label>
    <description>A 127mm high explosive cannon shell.</description>
    <graphicData>
      <texPath>Things/Projectile/127HE</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>
          <min>30</min>
          <max>60</max>
        </wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>127CannonBullet_Shell_HighExplosive</projectileWhenLoaded>
    <costList>
      <Steel>65</Steel>
      <Chemfuel>24</Chemfuel>
    </costList>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>127CannonBullet_Shell_HighExplosive</defName>
    <label>HE Shell</label>
    <graphicData>
      <texPath>Things/Projectile/LargeShell</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>127mmHEBullet</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>300</speed>
      <explosionRadius>2</explosionRadius>
      <flyOverhead>false</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>
</Defs>