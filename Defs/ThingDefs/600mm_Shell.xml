<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--=============== Base Shells ===============-->

  <ThingDef Name="HowitzerShellBase" ParentName="ResourceBase" Abstract="True">
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>4</stackLimit>
    <techLevel>Industrial</techLevel>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>500</MarketValue>
      <Mass>200</Mass>
      <Flammability>1.5</Flammability>
      <DeteriorationRate>0.2</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>600mmHowitzerShells</li>
    </thingCategories>
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
  </ThingDef>

  <ThingDef Name="MakeableHowitzerShellBase" ParentName="HowitzerShellBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>3000</workAmount>
      <targetCountAdjustment>5</targetCountAdjustment>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>CNCmachine</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

  <!--=============== 600 HE Shell ===============-->

  <ThingDef ParentName="MakeableHowitzerShellBase">
    <defName>600HowitzerShell_HighExplosive</defName>
    <label>60cm HE Howitzer shell</label>
    <description>A 600mm high explosive howitzer shell.</description>
    <graphicData>
      <texPath>Things/Projectile/600HE</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>7</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.6</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>
          <min>30</min>
          <max>60</max>
        </wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>600HowitzerBullet_Shell_HighExplosive</projectileWhenLoaded>
    <costList>
      <Steel>120</Steel>
      <Chemfuel>80</Chemfuel>
    </costList>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>600HowitzerBullet_Shell_HighExplosive</defName>
    <label>60cm shell</label>
    <graphicData>
      <texPath>Things/Projectile/ShellHighExplosive</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>HowitzerHEBullet</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>80</speed>
      <explosionRadius>9</explosionRadius>
      <flyOverhead>True</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>
</Defs>