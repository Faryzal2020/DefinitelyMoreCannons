<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--=============== Base Shells ===============-->

  <ThingDef Name="6PdrAPCannonShellBase" ParentName="ResourceBase" Abstract="True">
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>30</stackLimit>
    <techLevel>Industrial</techLevel>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <MarketValue>40</MarketValue>
      <Mass>2</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.2</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>6PdrCannonShells</li>
    </thingCategories>
    <tradeTags>
      <li>6PdrCannonShell</li>
    </tradeTags>
  </ThingDef>

  <ThingDef Name="Makeable6PdrAPCannonShellBase" ParentName="6PdrAPCannonShellBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>800</workAmount>
      <targetCountAdjustment>5</targetCountAdjustment>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

  <!--=============== 6Pdr AP Shell ===============-->

  <ThingDef ParentName="Makeable6PdrAPCannonShellBase">
    <defName>6PdrCannonShell_ArmourPiercing</defName>
    <label>6Pdr AP Cannon shell</label>
    <description>An 6Pdr APC (Armour Piercing Capped) cannon shell.</description>
    <graphicData>
      <texPath>Things/Projectile/6PdrAPC</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>1</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.2</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>
          <min>30</min>
          <max>60</max>
        </wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>6PdrCannonBullet_Shell_ArmourPiercing</projectileWhenLoaded>
    <costList>
      <Steel>15</Steel>
      <Chemfuel>1</Chemfuel>
    </costList>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>6PdrCannonBullet_Shell_ArmourPiercing</defName>
    <label>6Pdr AP Shell</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <flyOverhead>false</flyOverhead>
      <damageAmountBase>200</damageAmountBase>
      <speed>300</speed>
      <armorPenetrationBase>0.6</armorPenetrationBase>
    </projectile>
  </ThingDef>
</Defs>