<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
    <defName>Make_20mmMaterials</defName>
    <label>make 20mm Autocannon materials</label>
    <description>Make materials needed to build a 20mm Autcannon</description>
    <jobString>Making cannon materials.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>1000</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>500</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <TwentyMilsMaterials>1</TwentyMilsMaterials>
    </products>
		<skillRequirements>
			<Crafting>3</Crafting>
		</skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>CNCmachine</li>
    </recipeUsers>
  </RecipeDef>

